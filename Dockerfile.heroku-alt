# Alternative Dockerfile for Easypanel with Heroku Builder
FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci --only=production

# Copy source code
COPY . .

# Build application
RUN npm run build

# Install serve globally
RUN npm install -g serve

# Expose port
EXPOSE 80

# Start application
CMD ["serve", "-s", "dist", "-l", "80"]